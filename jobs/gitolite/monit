check process gitolite
  with pidfile /var/vcap/sys/run/gitolite/gitolite.pid
  start program "/var/vcap/packages/common/bin/monit_debugger gitolite /var/vcap/jobs/gitolite/bin/gitolite_ctl start"
  stop program "/var/vcap/packages/common/bin/monit_debugger gitolite /var/vcap/jobs/gitolite/bin/gitolite_ctl stop"
  group vcap
