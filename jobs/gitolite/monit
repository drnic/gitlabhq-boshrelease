check process gitolite_nginx
  with pidfile /var/vcap/sys/run/gitolite/nginx.pid
  start program "/var/vcap/jobs/gitolite/bin/monit_debugger gitolite_nginx '/var/vcap/jobs/gitolite/bin/nginx_ctl start'"
  stop program "/var/vcap/jobs/gitolite/bin/monit_debugger gitolite_nginx '/var/vcap/jobs/gitolite/bin/nginx_ctl stop'"
  group vcap
